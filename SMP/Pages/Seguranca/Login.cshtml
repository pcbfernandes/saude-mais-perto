@page "/Seguranca/Login"

@model SMP.Pages.Seguranca.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<style>
    html,
    body {
        height: 100%;
    }

    body {
        display: grid;
        -ms-flex-align: center;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        
    background: rgb(250,250,250);
    background: linear-gradient(100deg, rgba(210,16,221,1) 0%, rgba(92,92,233,1) 10%, rgba(16,255,255,1) 100%);
    }

    .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: auto;
    }

        .form-signin .checkbox {
            font-weight: 400;
        }

        .form-signin .form-control {
            position: relative;
            box-sizing: border-box;
            height: auto;
            padding: 10px;
            font-size: 16px;
        }

            .form-signin .form-control:focus {
                z-index: 2;
            }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

        .painel-login{
            background: rgba(250,250,250,0.5);
            border-radius: 10px;
        }
</style>


<div>
    <section>
        <div class="text-center">
            <div class=" d-block">
            <form class="form-signin painel-login" id="account" method="post">
                <div class="text-center mb-3">                    
                    <img class="d-inline-flex mb-2 mr-1" src="~/SaudeMaisPerto.png" alt="Saúde Mais Perto">
                </div>

                <input asp-for="Login" class="form-control" placeholder="informe o login..." required autofocus />
                <input asp-for="Password" type="password" class="form-control" placeholder="informe a senha..." required />
                <button class="btn btn-lg btn-primary btn-block" type="submit">Acessar</button>
            </form>
            @if (!string.IsNullOrWhiteSpace(Model.MensagemErro))
            {
                <div class="badge badge-danger text-wrap" style="max-width: 50%;">
                    <span>
                        @(Model.MensagemErro)
                    </span>
                </div>
            }
        </div>
        </div>
    </section>
</div>